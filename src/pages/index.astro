---
import Layout from "../layout/layout.astro";
---

<Layout title="Home | GuardianDB">
  <div class="w-full">
    <div class="relative w-full h-100">
      <img src="/images/hero.png" alt="Hero Image" class="hero-image" />
      <div class="bg-home-hero w-full h-full absolute"></div>
    </div>
  </div>
</Layout>

<style>
  .hero-image {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    color: transparent;
    object-position: center;
    object-fit: cover;
  }

  .bg-home-hero {
    background: linear-gradient(#000000a1, #0707076b, #070707a1);
  }
</style>
